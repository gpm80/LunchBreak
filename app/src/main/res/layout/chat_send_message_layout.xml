<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <ImageButton
                android:id="@+id/send_message_add_image_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="5dp"
                android:paddingLeft="5dp"
                android:layout_gravity="bottom"
                android:background="@drawable/chat_send_button"
                app:srcCompat="@drawable/ico_image"/>
        <EditText
                android:id="@+id/send_message_text_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:maxHeight="150dp"
                android:layout_gravity="top"
                android:layout_weight="1"
                android:textColor="@color/contextText"
                android:inputType="textCapSentences|textMultiLine"/>

        <ImageButton
                android:id="@+id/send_message_send_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="5dp"
                android:paddingLeft="5dp"
                android:layout_gravity="bottom"
                android:background="@drawable/chat_send_button"
                app:srcCompat="@drawable/ico_send"/>
    </LinearLayout>
</LinearLayout>